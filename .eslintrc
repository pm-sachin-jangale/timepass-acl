{
    "env": {
        "browser": true,
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true,
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "destructuring": true,
        "restParams": true,
        "templateStrings": true
    },
    "globals": {
        "angular": true
    },
    "plugins": [
        "angular"
    ],
    "rules": {
        "indent": 2,
        "quotes": [2, "single"],
        "brace-style": [2, "1tbs"],
        "comma-style": [2, "last"],
        "default-case": 2,
        "func-style": [2, "declaration"],
        "guard-for-in": 2,
        "no-floating-decimal": 2,
        "no-nested-ternary": 2,
        "no-undefined": 2,
        "radix": 2,
        "space-after-function-name": [2, "never"],
        "space-after-keywords": [2, "always"],
        "space-before-blocks": 2,
        "spaced-line-comment": [2, "always", { "exceptions": ["-"]}],
        "strict": [2, "global"],
        "wrap-iife": 2,

        "angular/ng_controller_name": 0,
        "angular/ng_di": [2, "function or array"]
    }
}

